# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# Visit https://editorconfig.org for more information

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Python files
[*.py]
indent_size = 4

# JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single
max_line_length = 80

# JSON files
[*.json]
indent_size = 2
insert_final_newline = true

# CSS, SCSS, and Less files
[*.{css,scss,less}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab
